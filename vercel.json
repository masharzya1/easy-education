{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/api/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/upload-image.js": {
      "maxDuration": 30
    },
    "api/create-payment.js": {
      "maxDuration": 30
    },
    "api/verify-payment.js": {
      "maxDuration": 30
    },
    "api/payment-webhook.js": {
      "maxDuration": 30
    },
    "api/process-enrollment.js": {
      "maxDuration": 30
    },
    "api/dynamic-manifest.js": {
      "maxDuration": 10
    }
  }
}
    