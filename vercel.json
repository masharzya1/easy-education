{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/upload-image.js": {
      "maxDuration": 30
    },
    "api/create-payment.js": {
      "maxDuration": 30
    },
    "api/verify-payment.js": {
      "maxDuration": 30
    },
    "api/payment-webhook.js": {
      "maxDuration": 30
    },
    "api/process-enrollment.js": {
      "maxDuration": 30
    }
  }
}
    